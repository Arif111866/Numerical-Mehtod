using namespace std;
class bisection_method
{
public:
	double calculation(double x){
		return x*x*x -x*x + 2 ;
	}
	void bisection(double a , double b)
	{
		if(calculation(a)*calculation(b) >=0){
			cout << "Select right a & b" << e ; return ;
		}
		double mid ;
		double faraction = 0.01 ;
		while((b-a) >= faraction){
			mid = (a+b)/2 ;
			if(calculation(mid) == 0){
				cout << "the root is = " << mid << e ; return ;
			}
			else if(calculation(mid) < 0)
				a = mid ;
			else b = mid ;
		}
		cout << "the root is = " << mid << e;
	}
};
int32_t main()
{ 

    ios_base::sync_with_stdio(false);cin.tie(NULL);
    double a = -500 , b = 100 ;
    bisection_method obj ;
    obj.bisection(a , b) ;

}
